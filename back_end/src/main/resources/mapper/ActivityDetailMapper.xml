<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.model.mapper.ActivityDetailMapper">
    <resultMap id="ActivityDetailResultMap" type="com.example.entity.response.ActivityDetailResp">
        <id column="activity_detail_id" property="activityDetailId"/>
        <result column="activity_id" property="activityId"/>
        <result column="emp_id" property="empId"/>
        <result column="url" property="url"/>
        <result column="auth_date" property="authDate"/>
        <result column="version" property="version"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="addActivityDetail" parameterType="com.example.entity.request.ActivityDetailReq">
        <selectKey keyColumn="activity_detail_id" keyProperty="activityDetailId" resultType="Integer" order="AFTER">
            select last_insert_id();
        </selectKey>
        INSERT INTO activity_detail(activity_id,emp_id,url,auth_date)VALUES
        (#{activityId},#{empId},#{url},#{authDate})
    </insert>

    <delete id="delActivityDetail" parameterType="Integer">
        DELETE FROM activity_detail WHERE activity_detail_id = #{activityDetailId}
    </delete>

    <update id="editActivityDetail" parameterType="com.example.entity.request.ActivityDetailReq">
        UPDATE activity_detail SET update_time = #{updateTime},version = version + 1
        <if test="activityId != null">
            ,activity_id = #{activityId}
        </if>
        <if test="empId != null">
            ,emp_id = #{empId}
        </if>
        <if test="url != null and url != ''">
            ,url = #{url}
        </if>
        WHERE activity_detail_id = #{activityDetailId} AND version = #{version}
    </update>

    <select id="getActivityDetail" resultMap="ActivityDetailResultMap" parameterType="Integer">
        SELECT activity_id,emp_id,url,auth_date,version,create_time,update_time
        FROM activity_detail
        WHERE  activity_detail_id = #{activityDetailId}
    </select>

    <select id="listActivityDetail" resultMap="ActivityDetailResultMap">
        SELECT activity_id,emp_id,url,auth_date,version,create_time,update_time
        FROM activity_detail
        <where>
            <if test="activity_id != null">
                AND activity_id = #{activityId}
            </if>
            <if test="empId != null">
                AND emp_id = #{empId}
            </if>
            <if test="url != null and url != ''">
                AND url LIKE CONCAT('%',#{url},'%')
            </if>
            <if test="startDate != null and startDate != ''"><!-- 开始时间检索 -->
                AND date_format(create_time,'%y%m%d') &gt;= date_format(#{startDate},'%y%m%d')
            </if>
            <if test="endDate != null and endDate != ''"><!-- 结束时间检索 -->
                AND date_format(create_time,'%y%m%d') &lt;= date_format(#{endDate},'%y%m%d')
            </if>
        </where>
    </select>
</mapper>